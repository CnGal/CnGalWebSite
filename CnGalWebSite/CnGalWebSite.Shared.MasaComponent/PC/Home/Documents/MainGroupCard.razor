

@if (Items.Count > 0)
{

    <MWindow @bind-Value="Index">
        @foreach (var item in Items)
        {
            <MWindowItem Value="item.Id">

                            <MainViewTip Id="@item.Id" />
            </MWindowItem>
        }
    </MWindow>

}


@code {
    [Parameter]
    public StringNumber Index { get; set; }
    [Parameter]
    public List<DocumentViewModel> Items { get; set; } = new List<DocumentViewModel>();

    public void Refresh(long index)
    {
        Index = index;
        StateHasChanged();
        
    }



}
