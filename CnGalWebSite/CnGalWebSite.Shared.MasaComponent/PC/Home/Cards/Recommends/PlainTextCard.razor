@inject IDataCacheService _dataCatcheService

<MDCard Class="plain-text-card item" Href="@($"entries/index/{Model.Id}")">
    <img src="@Model.MainPicture" alt="@Model.Name" loading="lazy" />
    <div class="content">
        <div class="name text-truncate-1">@Model.Name</div>
        <div class="tags">
            @if (Model.Release != null)
            {
                <CnGalWebSite.Shared.MasaComponent.PC.Entries.Releases.TimeChip Model="Model.Release" />
                <CnGalWebSite.Shared.MasaComponent.PC.Entries.Releases.EvaluationChip Model="Model.Release" />
            }
        </div>
        <div class="brief text-truncate-2">@Model.BriefIntroduction</div>
    </div>

</MDCard>

@code {
    [Parameter]
    public PersonalRecommendModel Model { get; set; }
}
