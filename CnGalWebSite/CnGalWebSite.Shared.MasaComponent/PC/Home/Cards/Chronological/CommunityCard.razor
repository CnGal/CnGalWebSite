            Link="https://jq.qq.com/?_wv=1027&k=JzuI1IkF"
        }, new CommunityModel
        {
            Icon=IconType.QQChannel,
            Title="QQ频道",
            Text="CnGal资料站官方QQ频道",
            Link="https://qun.qq.com/qqweb/qunpro/share?_wv=3&_wwv=128&inviteCode=onAQQ&from=246610&biz=ka"
        }
