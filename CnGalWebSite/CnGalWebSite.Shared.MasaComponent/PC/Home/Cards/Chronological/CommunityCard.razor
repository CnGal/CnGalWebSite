
<CnGalWebSite.Shared.MasaComponent.Shared.Components.MiniModeContainer>
<section class="community-card">
    <h2>社区交流</h2>
    <div class="group">
        @foreach (var item in _items)
        {
                <MDCard Class="item" Href="@item.Link" Target="_blank">
                        <MIcon Size="@("2rem")">@item.Icon.ToIconString()</MIcon>
                        <div class="content">
                            <div class="name">@item.Title</div>
                            <div class=" label-large">@item.Text</div>
                        </div>
            </MDCard>
        }
    </div>
</section>
</CnGalWebSite.Shared.MasaComponent.Shared.Components.MiniModeContainer>
@code {
    List<CommunityModel> _items = new List<CommunityModel>
    {
        new CommunityModel
        {
            Icon=IconType.QQ,
