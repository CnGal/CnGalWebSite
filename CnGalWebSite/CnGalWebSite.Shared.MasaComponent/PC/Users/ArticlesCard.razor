@inject IDataCacheService _dataCacheService
@inject IHttpService _httpService


@if (Model.TotalPages == 0)
{
    <NotFoundCard  />
}
else
{
    @foreach (var item in Model.Items)
    {
        <div class="mb-3">
            <CnGalWebSite.Shared.MasaComponent.Shared.Cards.Search.ArticleInforViewTip Model="item" />

        </div>
    }

    @if (Model.TotalPages > 1)
    {
        <CnGalWebSite.Components.Paginations.MasaPagination Value="Model.CurrentPage" Length="@Model.TotalPages" ValueChanged="OnPageClick" />
    }
}

@code {
    [CascadingParameter]
    public ErrorHandler ErrorHandler { get; set; }


    [Parameter]
    public string Id { get; set; }

    public UserArticleListModel Model { get; set; } = new UserArticleListModel();

    protected override async Task OnInitializedAsync()
    {
        try
        {
            Model = await _dataCacheService.UserArticleListDataCatche.GetCache($"{Id}?currentPage={Model.CurrentPage}&maxResultCount={Model.MaxCount}");
            StateHasChanged();
        }
        catch (Exception ex)
        {
            await ErrorHandler.ProcessError(ex, "获取用户发表文章列表失败");
        }
    }

    private async Task OnPageClick(int pageIndex)
    {
        try
        {
            Model = await _dataCacheService.UserArticleListDataCatche.GetCache($"{Id}?currentPage={pageIndex}&maxResultCount={Model.MaxCount}");
            StateHasChanged();
        }
        catch (Exception ex)
        {
            await ErrorHandler.ProcessError(ex, "获取用户发表文章列表失败");
        }
    }
}
