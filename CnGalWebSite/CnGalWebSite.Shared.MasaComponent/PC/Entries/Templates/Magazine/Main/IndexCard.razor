<style>
    ::-webkit-scrollbar {
        width: 0;
    }

    .variable.container {
        margin: 0;
        padding: 0;
        max-width: none;
    }

    .m-sheet.m-app-bar.m-toolbar:not(.m-sheet--outlined), .m-footer--absolute:not(.m-footer--inset) {
        display: none;
    }

    .m-main {
        padding: 0 !important;
    }
</style>

<CnGalWebSite.Shared.MasaComponent.Shared.Components.Magazine.MasaMagazineLayout LayoutId="@($"entry-magzine-style-{Model.Id}")" Outline="Outline">
    <MainCard Model="Model" Id="@Id" />
    <CnGalWebSite.Shared.MasaComponent.Shared.Components.Magazine.MasaMagazineContext Class="magzine-content-card">
        @ChildContent
        <StoryCard Model="Model"/>
        <CharacterCard Model="Model" />
        <GalleryCard Model="Model" />
        <StaffCard Model="Model" />

    </CnGalWebSite.Shared.MasaComponent.Shared.Components.Magazine.MasaMagazineContext>
    @if (!Outline)
    {
        <CnGalWebSite.Shared.MasaComponent.PC.Entries.Templates.Magazine.Others.PageButton LayoutId="@($"entry-magzine-style-{Model.Id}")" />
    }
</CnGalWebSite.Shared.MasaComponent.Shared.Components.Magazine.MasaMagazineLayout>


@code {
    [Parameter]
    public EntryIndexViewModel Model { get; set; }
    [Parameter]
    public bool Outline { get; set; }
    [Parameter]
    public string Id { get; set; }
    [Parameter]
    public RenderFragment ChildContent { get; set; }

}
