        <CnGalWebSite.Shared.MasaComponent.Shared.Editors.Buttons.RevokeButton Url="@("/entries/EditAudio/" + Model.Id)" ExamineType="Operation.EstablishAudio" OnClickRevoke="OnRevoke" />
    </div>
}

