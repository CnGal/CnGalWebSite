@if (Model.Pictures.Any())
{
    <CnGalWebSite.Shared.MasaComponent.PC.Entries.Templates.OfficialWebsite.Others.SectionCard Icon="IconType.PhotoAlbum" Title="GALLERY">
            <CnGalWebSite.Components.Images.ImageSlideGroup Model="imagesList" />
    </CnGalWebSite.Shared.MasaComponent.PC.Entries.Templates.OfficialWebsite.Others.SectionCard>
}

@code {
    [Parameter]
    public EntryIndexViewModel Model { get; set; }
    public List<ImagesLargeViewModel> imagesList = new List<ImagesLargeViewModel>();

    protected override void OnInitialized()
    {
        imagesList = Model.Pictures.Select(s => s.Pictures).SelectMany(s => s).Select(s => new ImagesLargeViewModel
        {
            Note = s.Note,
            Image = s.Url
        }).ToList();
    }

}


