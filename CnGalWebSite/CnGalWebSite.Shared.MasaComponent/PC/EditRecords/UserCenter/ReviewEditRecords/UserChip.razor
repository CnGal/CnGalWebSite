@inject NavigationManager NavigationManager

<CnGalWebSite.Shared.MasaComponent.PC.Home.Cards.Shared.IconChip Color="info" Icon="IconType.User" Text="@Name" Outlined OnClick="OnClick" />

 @code {
    [Parameter]
    public string Name { get; set; }
    [Parameter]
    public string Id { get; set; }

    public void OnClick()
    {
        NavigationManager.NavigateTo($"/space/index/{Id}");
    }
}
