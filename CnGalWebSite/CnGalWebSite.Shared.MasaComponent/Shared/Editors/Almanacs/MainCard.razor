

<CnGalWebSite.Components.Containers.MasaTitleContainer Icon="@IconType.Home.ToIconString()" Title="主要信息" Class="mb-4" Collapable>
    <MRow>
        <MCol Cols="12" Md="6">
            <MTextField @bind-Value="Model.Name" Label="名称" />
        </MCol>
        <MCol Cols="12" Md="6">
            <MTextField @bind-Value="Model.Year" Label="年份" />
        </MCol>
        <MCol Cols="12">
            <MTextarea Rows="3" @bind-Value="Model.BriefIntroduction" Label="简介" />
        </MCol>
    </MRow>

</CnGalWebSite.Components.Containers.MasaTitleContainer>

@code {
    [Parameter]
    public AlmanacEditModel Model { get; set; }
}
