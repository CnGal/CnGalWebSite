<CnGalWebSite.Shared.MasaComponent.Shared.Components.MasaAlert Type="AlertTypes.Warning" Class="mb-3">
    此部分仅作用于专题页，具体请参阅 <a href="/articles/index/2350" class="warning--text fw-bold">《专题页介绍》</a>
</CnGalWebSite.Shared.MasaComponent.Shared.Components.MasaAlert>

<CnGalWebSite.Shared.MasaComponent.Shared.Components.MasaTitleContainer Icon="@IconType.Style.ToIconString()" Title="专题页样式补充信息" Class="@Class" Collapable @bind-IsCollapsed="IsCollapsed">
        <div class="row mb-4">
            <div class="form-group col-12 col-md-6  col-lg-3 mt-2">
                <CnGalWebSite.Shared.MasaComponent.Shared.Editors.Buttons.ImageUploadButton @bind-ImagePath="@Model.Logo" Type="ImageAspectType.None" Text="上传Logo" />
            </div>
        </div>

        <div class="row">
            <div class="form-group col-12  col-sm-6">
                <BootstrapInput @bind-Value="Model.SubTitle" ShowLabel="true" />
            </div>
            <div class="form-group col-12  col-sm-6">
                <BootstrapInput @bind-Value="Model.Impressions" ShowLabel="true" />
            </div>
            <div class="form-group col-12  col-sm-6">
                <BootstrapInput @bind-Value="Model.Color" ShowLabel="true" />
            </div>
        </div>

    <CnGalWebSite.Shared.MasaComponent.Shared.Editors.Cards.Relevances.InputRelevanceListTitle Title="图片" Text="包括轮播图和背景图" />
    <CnGalWebSite.Shared.MasaComponent.Shared.Editors.Cards.ImageListEditorCard Model="Model.Images" TValue="EditWebsiteImageModel"></CnGalWebSite.Shared.MasaComponent.Shared.Editors.Cards.ImageListEditorCard>

    <CnGalWebSite.Shared.MasaComponent.Shared.Components.MasaAlert Type="AlertTypes.Warning" Class="mt-3">
        SSR模式下会拦截不受信任的源和内联脚本，请与管理员联系以添加脚本
    </CnGalWebSite.Shared.MasaComponent.Shared.Components.MasaAlert>

     <CnGalWebSite.Shared.MasaComponent.Shared.Editors.Cards.Relevances.InputRelevanceListTitle Title="自定义Html" Text="将会覆盖整个页面" />
    <CnGalWebSite.Shared.MasaComponent.Shared.Components.MasaHtmlEditor @bind-Context="Model.Html" />

    <CnGalWebSite.Shared.MasaComponent.Shared.Editors.Cards.Relevances.InputRelevanceListTitle Title="自定义首页" Text="可使用Html" />
    <CnGalWebSite.Shared.MasaComponent.Shared.Components.MasaHtmlEditor @bind-Context="Model.FirstPage" />

     <CnGalWebSite.Shared.MasaComponent.Shared.Editors.Cards.Relevances.InputRelevanceListTitle Title="自定义介绍" Text="可使用Html" />
    <CnGalWebSite.Shared.MasaComponent.Shared.Components.MasaHtmlEditor @bind-Context="Model.Introduction" />

</CnGalWebSite.Shared.MasaComponent.Shared.Components.MasaTitleContainer>
@code {
    [Parameter]
    public EditEntryWebsiteViewModel Model { get; set; }
    [Parameter]
    public string Class { get; set; }
    [Parameter]
    public bool IsCollapsed { get; set; } = true;

}
