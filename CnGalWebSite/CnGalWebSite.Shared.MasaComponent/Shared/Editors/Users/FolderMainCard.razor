@inject IDataCacheService _dataCacheService


<CnGalWebSite.Shared.MasaComponent.Shared.Components.MasaTitleContainer Title="基本信息" Icon="fa fa-fw fa-info-circle" Collapable Class="@Class">
    <ValidateForm Model="@Model">
        <div class="row">
            <div class=" col-6 col-md-4 col-lg-3 mt-2">
                <CnGalWebSite.Shared.MasaComponent.Shared.Editors.Buttons.ImageUploadButton ShowCropper @bind-ImagePath="@Model.MainImage" Text="上传主图" Type="ImageAspectType._16_9"/>
            </div>
        </div>

        <div class="row  mt-4">
            <div class="form-group col-12  col-sm-6">
                <BootstrapInput @bind-Value="Model.Name" />
            </div>

            <div class="form-group col-12">
                <Textarea @bind-Value="Model.BriefIntroduction" rows="3"/>
            </div>
            <div class="form-group col-12 col-sm-6">
                <Switch @bind-Value="Model.ShowPublicly" />
            </div>
            <div class="form-group col-12 col-sm-6">
                <Switch @bind-Value="Model.IsHidden" />
            </div>
            <div class="form-group col-12 col-sm-6">
                <Switch @bind-Value="Model.IsDefault" />
            </div>
        </div>
    </ValidateForm>
       
</CnGalWebSite.Shared.MasaComponent.Shared.Components.MasaTitleContainer>

@code {
    [Parameter]
    public EditFavoriteFolderViewModel Model { get; set; } = new EditFavoriteFolderViewModel();
    [Parameter]
    public string Class { get; set; }

    protected override async Task OnInitializedAsync()
    {


    }
}
