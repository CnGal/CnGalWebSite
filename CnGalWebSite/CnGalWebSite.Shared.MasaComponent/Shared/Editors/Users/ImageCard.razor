<CnGalWebSite.Shared.MasaComponent.Shared.Components.MasaTitleContainer Title="上传图片" Outline Icon="@IconType.Image.ToIconString()" Collapable Class="@Class">
     <MRow>
         <MCol Cols="12" Md="6" Lg="3">
             <CnGalWebSite.Shared.MasaComponent.Shared.Editors.Buttons.ImageUploadButton ShowCropper @bind-ImagePath="@Model.PhotoName" Type="ImageAspectType._1_1" Text="上传头像" Class="mb-4"/>
         </MCol>
         <MCol Cols="12" Md="6" Lg="3">
             <CnGalWebSite.Shared.MasaComponent.Shared.Editors.Buttons.ImageUploadButton ShowCropper @bind-ImagePath="@Model.BackgroundName" Type="ImageAspectType._4_1A2" Text="上传空间主图" Class="mb-4" />
         </MCol>
         <MCol Cols="12" Md="6" Lg="3">
             <CnGalWebSite.Shared.MasaComponent.Shared.Editors.Buttons.ImageUploadButton @bind-ImagePath="@Model.MBgImageName" Type="ImageAspectType.None" Text="上传大背景" Class="mb-4" />
         </MCol>
         <MCol Cols="12" Md="6" Lg="3">
             <CnGalWebSite.Shared.MasaComponent.Shared.Editors.Buttons.ImageUploadButton @bind-ImagePath="@Model.SBgImageName" Type="ImageAspectType.None" Text="上传小背景" Class="mb-4" />
         </MCol>
     </MRow>
</CnGalWebSite.Shared.MasaComponent.Shared.Components.MasaTitleContainer>

@code {
    [Parameter]
    public EditUserDataViewModel Model { get; set; } = new EditUserDataViewModel();
    [Parameter]
    public string Class { get; set; }

}
