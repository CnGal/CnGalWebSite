<div class="@(Class+( Outline?"":" rounded shadow-sm"))">
    <MAlert Class=" m-0 bg-opacity "
            ColoredBorder
            Type="Type"
            Color="@Color"
            Icon="@Icon"
            Border="Borders.Left">
        @ChildContent
    </MAlert>

</div>

@code {
    [Parameter]
    public AlertTypes Type { get; set; }
    [Parameter]
    public string Icon { get; set; }
    [Parameter]
    public string Color { get; set; }
    [Parameter]
    public bool Outline { get; set; }
    [Parameter]
    public string Class { get; set; }
    [Parameter]
    public RenderFragment ChildContent { get; set; }
}

