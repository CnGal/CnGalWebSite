@inject IHttpService _httpService
@inject IPopupService PopupService


@if (Model == null)
{
    <ProgressingCard />
}
else
{
    <MCard>
        <MCardTitle>
            @(Id==0? $"添加{_name}" : $"编辑{_name}")  @Model.Name
        </MCardTitle>
        <MCardText>
            Id：@Model.Id
        </MCardText>
        <MCardText>
            <MRow>
                <MCol Cols="12" Xl="6">
                    <MTextField @bind-Value="Model.Name" Label="名称" HideDetails="true" />

                </MCol>
                <MCol Cols="12" Xl="6">
                    <MTextField @bind-Value="Model.DisplayName" Label="显示名称" HideDetails="true" />
                </MCol>

                <MCol Cols="12">
                    <MTextarea Rows="3" @bind-Value="Model.Description" Label="简介" HideDetails="true" />
                </MCol>
                <MCol Cols="12" Xl="6">
                    <MCheckbox @bind-Value="Model.Required" Label="必选" TValue="bool" HideDetails="true" />
                </MCol>
                <MCol Cols="12" Xl="6">
                    <MCheckbox @bind-Value="Model.Enabled" Label="启用" TValue="bool" HideDetails="true" />
                </MCol>
                <MCol Cols="12">
                    <InputStringListCard Title="用户声明" SubTitle="包含的用户声明" Items="Model.UserClaims" />
                </MCol>
            </MRow>

        </MCardText>
        <MCardActions>
            <MSpacer></MSpacer>
            <MButton Color="primary"
                     Text
                     OnClick="SaveEdit">
                <MIcon Left>mdi-check</MIcon>
                保存
            </MButton>
        </MCardActions>

    </MCard>

}



@code {
    [Parameter]
    public int Id { get; set; }
    [Parameter]
    public EventCallback OnEdited { get; set; }

    IdentityResourceEditModel Model;

    private string _baseUrl = "api/identityresources/";
    private string _name = "IdentityResource";


    [CascadingParameter]
    public ErrorHandler ErrorHandler { get; set; }

    protected override async Task OnInitializedAsync()
    {
        await Refresh();
    }

    public async Task Refresh()
    {
        try
        {
            Model = null;
            StateHasChanged();
            Model = Id == 0 ? new IdentityResourceEditModel() : await _httpService.GetAsync<IdentityResourceEditModel>($"{_baseUrl}edit?id={Id}");
            StateHasChanged();
        }
        catch (Exception ex)
        {
            ErrorHandler.ProcessError(ex, $"获取{_name}信息失败");
        }
    }

    public async Task SaveEdit()
    {
        try
        {
            var result = await _httpService.PostAsync<IdentityResourceEditModel, Result>($"{_baseUrl}edit", Model);
            if (result.Success)
            {
                if (!string.IsNullOrWhiteSpace(result.Message))
                {
                    await PopupService.ToastAsync(result.Message, AlertTypes.Success);
                }
                await OnEdited.InvokeAsync(Model);
                StateHasChanged();
            }
            else
            {
                await PopupService.ToastAsync(result.Message ?? "操作失败", AlertTypes.Error);
            }
        }
        catch (Exception ex)
        {
            ErrorHandler.ProcessError(ex, Model.Id == 0 ? $"添加{_name}失败" : $"编辑{_name}信息失败");
        }

    }
}
