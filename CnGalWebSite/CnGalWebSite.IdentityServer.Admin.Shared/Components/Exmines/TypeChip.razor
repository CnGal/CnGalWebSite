    <MChip Small Class="ma-2"
           Color="@GetColor()"
           Outlined>
        <MIcon Left Small>
            @GetIcon()
        </MIcon>
        @Type.GetDisplayName()
    </MChip>

@code {
    [Parameter]
    public ExamineType Type { get; set; }

    public string GetColor()
    {
        return Type switch
        {
            ExamineType.Client => "green",
            _ => "purple"
        };
    }

    public string GetIcon()
    {
        return Type switch
        {
            ExamineType.Client => "mdi-application",
            _ => "mdi-lightbulb-question"
        };
    }
}
