<TabLink Icon="fa fa-pencil" Url="@("/home/editrecord?ContrastId=" +Model.Id)" Text="@(Model.RelatedName + " 编辑记录")" OnClick="NavClick"
         class="a-font-color col-12 col-lg-6">
    <div>
        <CnGalWebSite.Shared.MasaComponent.Shared.Cards.Users.UserRankTextCard UserId="@Model.UserId" UserName="@Model.UserName" Image="@Model.UserImage" Ranks="@Model.Ranks" Time="@Model.ApplyTime"  IsRight="IsRight"
                             Text="@(Model.Operation.GetDisplayName())"/>
    </div>
</TabLink>
@code {
    [Parameter]
    public ExaminedNormalListModel Model { get; set; }
    [Parameter]
    public long LastExamineId { get; set; }
    [Parameter]
    public bool IsRight { get; set; }
    [Parameter]
    public EventCallback OnNavClick { get; set; }

    public async Task NavClick()
    {
        await OnNavClick.InvokeAsync();
    }

}
