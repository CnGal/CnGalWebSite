@inject NavigationManager NavigationManager

<a class="d-flex pointer a-font-color" style="align-items: center; flex-direction: column; " @onclick="OnLogin">
    <img src="https://app.cngal.org/_content/CnGalWebSite.Shared/images/apps/user.png" alt="默认头像" style="width: 60px; border-radius: 50%; aspect-ratio: 1;" />
    <div style="display: flex; flex-direction: column; align-items: center; " class="mt-2">
        <span class="h6 fw-bold">点击头像登录</span>
        <span>
            登入后可编辑网站内容
        </span>
    </div>
</a>

@code {
    protected void OnLogin()
    {
        if (ToolHelper.IsSSR)
        {
            NavigationManager.NavigateTo($"Account/Login?returnUrl={NavigationManager.Uri.Replace(NavigationManager.BaseUri, "")}", true);
        }
        else
        {
            NavigationManager.NavigateToLogin("authentication/login");
        }
    }
}
