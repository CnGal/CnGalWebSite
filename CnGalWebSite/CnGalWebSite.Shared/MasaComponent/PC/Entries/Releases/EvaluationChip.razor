@inject IEventService _eventService

@if (Model.StoreInfor.EvaluationCount > 0)
{
        <MChip Small Color="success" Outlined Class="ma-1">
            <MIcon Left Small>@IconType.ThumbsUp.ToIconString()</MIcon>
            @($"{Model.StoreInfor.RecommendationRate}% 好评")
        </MChip>
        <MChip Small Color="info" Outlined Class=" ma-1">
            <MIcon Left Small>@IconType.Article.ToIconString()</MIcon>
            @($"{Model.StoreInfor.EvaluationCount}条评测")
        </MChip>
}

@code {
    [Parameter]
    public GameReleaseViewModel Model { get; set; }
}
