@inject HttpClient Http
@inject NavigationManager NavigationManager
@inject IDataCacheService _dataCacheService


<CnGalWebSite.Shared.MasaComponent.Shared.Components.MasaTitleContainer Title="打折游戏" Icon="@IconType.Price.ToIconString()" ShowMoreButton OnClickMore="OnClickMore">
    <MSlideGroup ShowArrows="true">
        <ChildContent>
            @foreach (var item in _dataCacheService.DiscountGamesCatche.Take(12))
            {
                <MSlideItem>
                    <MCard Width="350" Class="p-2" Outlined Style="border:0;background-color:transparent"
                           OnClick="@context.Toggle"
                           RefBack="@context.Ref">
                        <DiscountGameViewTip Model="item" />
                    </MCard>
                </MSlideItem>
            }
        </ChildContent>

    </MSlideGroup>
</CnGalWebSite.Shared.MasaComponent.Shared.Components.MasaTitleContainer>

@code {
    [CascadingParameter]
    public ErrorHandler ErrorHandler { get; set; }

    public List<SteamInforTipViewModel> Model = new List<SteamInforTipViewModel>();


    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            try
            {
                if (_dataCacheService.DiscountGamesCatche.Any()==false)
                {
                    _dataCacheService.DiscountGamesCatche=await Http.GetFromJsonAsync<List<SteamInforTipViewModel>>(ToolHelper.WebApiPath + "api/steam/GetAllDiscountSteamGame", ToolHelper.options);
                }

                _dataCacheService.DiscountGamesCatche.Random();
                StateHasChanged();
            }
            catch (Exception ex)
            {
                ErrorHandler.ProcessError(ex, "获取词条主页打折游戏列表失败");
            }
        }
    }

    public void OnClickMore()
    {
        NavigationManager.NavigateTo("/discount");
        
    }

}
