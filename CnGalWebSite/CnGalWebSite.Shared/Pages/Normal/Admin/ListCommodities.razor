@page "/admin/listcommodities"
@attribute [Authorize(Roles = "Admin")]

@inject IHttpService _httpService
@inject IPopupService PopupService
@inject NavigationManager NavigationManager

<CnGalWebSite.Shared.MasaComponent.Shared.Cards.TitleTip Title="看板娘的小卖铺" />

<div>
    <MDCard Class="mb-4">
        <MTabs @bind-Value="TabIndex" IconsAndText Grow CenterActive SliderColor="primary" ActiveClass="primary--text">

            <MTab Value="1">
                小卖铺<MIcon>@IconType.Store.ToIconString()</MIcon>
            </MTab>
            <MTab Value="2">
                兑换码<MIcon>@IconType.Lottery.ToIconString()</MIcon>
            </MTab>
        </MTabs>
    </MDCard>

    <MTabsItems @bind-Value="TabIndex">
        <MTabItem Value="1">
            <CnGalWebSite.Shared.MasaComponent.PC.Admin.Commodities.ListCard />

        </MTabItem>
        <MTabItem Value="2">
            <CnGalWebSite.Shared.MasaComponent.PC.Admin.Commodities.Codes.ListCard />
        </MTabItem>
    </MTabsItems>
</div>

@code {

    public StringNumber TabIndex { get; set; } = 1;
}
