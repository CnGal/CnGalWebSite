@inject IDataCacheService _dataCacheService


<MBorder Color="@_dataCacheService.ThemeSetting.Theme" Style="border-radius:0;height:50%;margin: auto 0;">
    <MCardTitle>@Title</MCardTitle>
    <MCardSubtitle>@(string.IsNullOrWhiteSpace(Text)?("关联的" + Title):Text)</MCardSubtitle>
</MBorder>

@code {

    [Parameter]
    public string Title { get; set; }
    [Parameter]
    public string Text { get; set; }

}
