

<div class="@Class">
    @if (string.IsNullOrWhiteSpace(Title) == false)
    {
       <InputRelevanceListTitle Title="@Title"/>
    }
    <div class="row">
        @for (int i = 0; i < Model.Count; i++)
        {
            int temp = i;
            <div class="col-12 col-md-6 col-lg-4 col-xxl-3 mb-2">
                <AutoComplete Items="@AutoCompleteItems" IsLikeMatch="true" IgnoreCase="true" @bind-Value="Model[temp].DisplayName" placeholder="唯一名称" />
            </div>
        }
    </div>
    <CnGalWebSite.Shared.MasaComponent.Shared.Components.MasaButton Text="添加" OnClick="OnAddinfor" Icon="mdi-plus"/>
</div>

@code {
    [Parameter]
    public List<RelevancesModel> Model { get; set; }
    [Parameter]
    public List<string> AutoCompleteItems { get; set; }
    [Parameter]
    public string Class { get; set; }


    [Parameter]
    public string Title { get; set; }

    private void OnAddinfor()
    {
        Model.Add(new RelevancesModel());
        
    }

}
