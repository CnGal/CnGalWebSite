<CnGalWebSite.Components.Containers.MasaTitleContainer Title="基础信息" Icon="@IconType.Home.ToIconString()" Collapable Class="mb-4">
    <MRow>
        <MCol Cols="12" Md="6">
             <MTextField @bind-Value="Model.Name" Label="企划名称" />
         </MCol>
         <MCol Cols="12" Md="6">
             <CnGalWebSite.Components.Inputs.MasaDatePicker @bind-Value="Model.EndTime" Nullable="false" ShowDate ShowTime="false" Label="截止日期" />
         </MCol>
         <MCol Cols="12">
             <MTextarea Rows="6" @bind-Value="Model.Description" Label="企划详情" />
         </MCol>
         <MCol Cols="12">
             <MTextField @bind-Value="Model.Contact" Label="联系方式" />
         </MCol>

    </MRow>
</CnGalWebSite.Components.Containers.MasaTitleContainer>

@code {
    [Parameter]
    public ProjectEditModel Model{ get; set; }
}
