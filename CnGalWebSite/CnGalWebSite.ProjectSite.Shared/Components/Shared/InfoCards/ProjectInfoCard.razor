<MDCard Class="info-card-project pa-4" Href="@($"/project/{Model.Id}")">
    <div class="title-large">@Model.Name</div>
    <div class="label-large text-truncate-3">@Model.Description</div>
    <div class="info-card">
        <div class="d-flex label-large">
            <MIcon Small Color="primary" Class="me-2">@IconType.DeterminedTime.ToIconString()</MIcon>@Model.EndTime.ToString("yyyy-MM-dd")
         </div>

        @if (Model.Percentage > 0)
        {
            <div class="title-large primary-text">@($"{Model.Percentage} %")</div>
        }

        @if (Model.BudgetMax > 0)
        {
            <div class="title-large primary-text">@($"￥ {Model.BudgetMin} ~ {Model.BudgetMax}")</div>
        }

        @if (Model.BudgetMax == 0 && Model.Percentage == 0)
        {
            <div class="title-large primary-text">为爱发电</div>
        }
    </div>
</MDCard>

@code {
    [Parameter]
    public ProjectInfoViewModel Model { get; set; }
}
