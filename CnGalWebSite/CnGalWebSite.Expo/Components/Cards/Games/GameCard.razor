<MCard Class="game-item-card" Href="@Model.Url">
    <img src="@Model.Image" loading="lazy" alt="@Model.GameName"/>
    <div class="name-card">@Model.GameName</div>
    <div class="tags-card">
        @foreach (var item in Model.Tags)
        {
            <div class="elevation-2">@item.Name</div>
        }
    </div>
</MCard>

@code {
    [Parameter]
    public ExpoGameViewModel Model { get; set; }
}
