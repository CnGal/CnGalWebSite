            <CnGalWebSite.Components.Buttons.MasaButton TextStyle Icon="mdi-gift" Text="预约抽奖" Href="/lottery" />
            <CnGalWebSite.Components.Buttons.MasaButton TextStyle  Icon="mdi-email" Text="联系我们" Href="/contact" />
